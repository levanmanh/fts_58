<table class="table table-striped table-hover table-style">
  <thead>
    <th class="th-style"><p><%= t "controller.subject.created_at" %></p></th>
    <th class="th-style"><p><%= t "controller.subject.stt" %></p></th>
    <th class="th-style"><p><%= t "controller.subject.status" %></p></th>
    <th class="th-style"><p><%= t "controller.subject.duration" %></p></th>
    <th class="th-style"><p><%= t "controller.subject.number_question" %></p></th>
    <th class="th-style"><p><%= t "controller.subject.point" %></p></th>
    <th class="th-style"></th>
  </thead>
  <tbody>
    <% @lessons.each_with_index do |lesson, index| %>
      <tr>
        <td class="td_style"><%= lesson.created_at %></td>
        <td><%= index + 1 %></td>
        <td class="td_style"><%= lesson.status %></td>
        <td class="td_style"><%= lesson.subject.duration %></td>
        <td class="td_style"><%= lesson.subject.number_question %></td>
        <% if lesson.checked? %>
          <td class="td_style"><%= lesson.get_point lesson.id %></td>
        <% elsif %>
          <td class="td_style">--</td>
        <% end %>
        <td class="td_style"><%= link_to t("controller.subject.edit"), admin_lesson_path(lesson) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
