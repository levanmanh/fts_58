<div class="row">
  <div class="col-md-10 col-offset-2">
    <h2><%= t "controller.question.list_question" %></h2>
    <%= link_to new_admin_question_path, class: "btn btn-primary btn-xs" do %>
      <span class="glyphicon glyphicon-eye-open"></span>
      <%= t "controller.question.create_question" %>
    <% end %>
    <table class="table table-striped table-hover">
      <thead>
        <th><%= t "controller.question.subject" %></th>
        <th><%= t "controller.question.content" %></th>
        <th><%= t "controller.question.update" %></th>
        <th><%= t "controller.question.delete" %></th>
      </thead>
      <tbody>
        <% @questions.each do |question| %>
          <tr>
            <td><%= link_to question.subject.name, admin_question_path(question) %></td>
            <td><%= question.content %></td>
            <td>
              <%= link_to [:edit,:admin, question], class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span>
                <%= t "controller.question.update_question" %>
              <% end %>
            </td>
            <td>
              <%= link_to [:admin, question], method: :delete,
                data: {confirm: t("controller.question.sure")},
                class: "btn btn-primary btn-xs" do %>
                <span class="glyphicon glyphicon-eye-open"></span>
                <%= t "controller.question.delete_question" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<%= will_paginate %>
