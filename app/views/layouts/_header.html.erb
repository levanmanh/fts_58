<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("pages.my_web"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to t("layouts.user"), admin_users_path %></li>
            <li><%= link_to t("layouts.questions"), admin_questions_path %></li>
            <li><%= link_to t("layouts.lessons"), admin_lessons_path %></li>
            <li><%= link_to t("layouts.subjects"), admin_subjects_path %></li>
            <li><%= link_to t("layouts.logout"), logout_path, method: :delete %></li>
          <% else %>
            <li><%= link_to t("layouts.lessons"), lessons_path %></li>
            <li><%= link_to t("layouts.suggest_question"), questions_path %></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <%= t "season.account" %><b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to t("layouts.profile"), current_user %></li>
                <li><%= link_to t("layouts.setting"), edit_user_path(current_user) %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to t("layouts.logout"), logout_path, method: :delete %>
                </li>
              </ul>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to t("signup.name"), signup_path %></li>
          <li><%= link_to t("layouts.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
