<div class="col-md-12.col-md-offset-0">
  <%= form_for :lesson, html: {class: "form-inline"} do |f| %>
    <%= f.collection_select :subject_id, @subjects, :id, :name, {},
      class: "form-control" %>
    <%= f.submit t("views.lesson.create"), class: "btn btn-primary" %>
  <% end %>
  <hr>
  <table class="table table-striped table-hover table-style">
    <thead>
      <th class="th-style"><p><%= t "views.lesson.subject" %></p></th>
      <th class="th-style"><p><%= t "views.lesson.status" %></p></th>
      <th class="th-style"><p><%= t "views.lesson.duration" %></p></th>
      <th class="th-style"><p><%= t "views.lesson.number_question" %></p></th>
      <th class="th-style"><p><%= t "views.lesson.point" %></p></th>
      <th class="th-style"></th>
    </thead>
    <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td class="td_style"><%= lesson.subject.name %></td>
          <td class="td_style"><%= lesson.status %></td>
          <td class="td_style"><%= lesson.subject.duration %></td>
          <td class="td_style"><%= lesson.subject.number_question %></td>
          <td class="td_style"><%= lesson.point %></td>
          <td class="td_style"><%= link_to t("views.lesson.start"), lesson_path(lesson) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
