<div class="col-md-12.col-md-offset-0">
  <%= form_for :lesson, html: {class: "form-inline"} do |f| %>
    <%= f.collection_select :subject_id, @subjects, :id, :name, {},
      class: "form-control" %>
    <%= f.submit t("controller.lesson.create"), class: "btn btn-primary" %>
  <% end %>
  <hr>
  <table class="table table-striped table-hover table-style">
    <thead>
      <th class="th-style"><p><%= t "controller.lesson.created_at" %></p></th>
      <th class="th-style"><p><%= t "controller.lesson.subject" %></p></th>
      <th class="th-style"><p><%= t "controller.lesson.status" %></p></th>
      <th class="th-style"><p><%= t "controller.lesson.duration" %></p></th>
      <th class="th-style"><p><%= t "controller.lesson.number_question" %></p></th>
      <th class="th-style"><p><%= t "controller.lesson.point" %></p></th>
    </thead>
    <tbody>
      <% @lessons.each do |lesson| %>
        <tr>
          <td class="td_style"><%= lesson.created_at %></td>
          <td class="td_style"><%= lesson.subject.name %></td>
          <td class="td_style"><%= lesson.status %></td>
          <td class="td_style"><%= lesson.subject.duration %></td>
          <td class="td_style"><%= lesson.subject.number_question %></td>
          <% if lesson.checked? %>
            <td class="td_style"><%= lesson.get_point lesson.id %></td>
          <% else %>
            <td class="td_style"> -- </td>
          <% end %>
          <td class="td_style">
            <%= link_to t("controller.subject.start"), lesson_path(lesson) %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
