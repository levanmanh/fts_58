<div class="col-md-8 col-md-offset-1">
  <h1 class="text-center" ><%= @lesson.subject.name %></h1>
  <hr/>
  <%= form_for @lesson, html: {id: "submit-lesson"} do |f| %>
    <ol>
      <%= f.fields_for :results do |result| %>
        <%= render "question", f: result %>
      <% end %>
    </ol>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= f.submit :save, class: "btn btn-primary btn-submit" %>
      </div>
    </div>
  <% end %>
</div>
