<div class="col-md-8 col-md-offset-1">
  <h1 class="text-center" ><%= @lesson.subject.name %></h1>
    <h3 class="text-center">
      <% if @lesson.checked? %>
        <%= @lesson.get_point @lesson.id %>
      <% end %>
    </h3>
  <%= form_for @lesson, html: {id: "submit-lesson"} do |f| %>
    <ol>
      <%= f.fields_for :results do |result| %>
        <%= render "question", f: result %>
      <% end %>
    </ol>
    <% if @lesson.testing? %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= f.submit :save, class: "btn btn-primary btn-submit" %>
          <%= f.submit :finish,
            class: "btn btn-danger btn-submit pull-right finish-lesson" %>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
